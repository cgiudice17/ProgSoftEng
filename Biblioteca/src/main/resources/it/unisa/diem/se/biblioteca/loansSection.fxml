<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.se.biblioteca.controller.LoansSectionController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         
         <left>
            <VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="15.0" style="-fx-background-color: #2A2E37;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Gestione Prestiti" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="22.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>

                  <VBox spacing="10.0">
                     <children>
                        <Label text="Nuova Operazione" textFill="#b2b2b2">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        
                        <TextField fx:id="loanStudentLabel" promptText="Matricola Studente" style="-fx-background-color: #3C4250; -fx-text-fill: white; -fx-prompt-text-fill: derive(-fx-control-inner-background, -30%); -fx-background-radius: 5;" />
                        
                        <TextField fx:id="loanBookLabel" promptText="ISBN Libro" style="-fx-background-color: #3C4250; -fx-text-fill: white; -fx-prompt-text-fill: derive(-fx-control-inner-background, -30%); -fx-background-radius: 5;" />
                        
                        <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="Data Restituzione" style="-fx-background-color: #3C4250; -fx-control-inner-background: #3C4250; -fx-text-base-color: white; -fx-prompt-text-fill: gray;" />
                     </children>
                  </VBox>

                  <VBox VBox.vgrow="ALWAYS" />

                  <Button fx:id="loanButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#addLoan" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="REGISTRA PRESTITO">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Button>
                  
                  <Button fx:id="returnButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#returnLoan" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="REGISTRA RESTITUZIONE">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Button>
                  
                  <Button fx:id="goBackButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: transparent; -fx-border-color: #7f8c8d; -fx-border-radius: 5; -fx-text-fill: #95a5a6; -fx-cursor: hand;" text="Torna Indietro">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
               </padding>
               <effect>
                  <DropShadow color="#00000040" radius="10.0" width="15.0" />
               </effect>
            </VBox>
         </left>

         <center>
            <VBox spacing="15.0" style="-fx-background-color: #F4F4F4;" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #D3D3D3; -fx-border-radius: 5;">
                     <children>
                        <TextField fx:id="loanSearchLabel" onAction="#searchLoan" promptText="Cerca per matricola studente o ISBN libro..." style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" top="5.0" />
                     </padding>
                  </HBox>

                  <TableView fx:id="loanTable" editable="true" style="-fx-background-color: white; -fx-border-color: #D3D3D3; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="loanNameClm" prefWidth="100.0" text="Nome" />
                        <TableColumn fx:id="loanSurnameClm" prefWidth="100.0" text="Cognome" />
                        <TableColumn fx:id="loanCodeClm" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Matricola" />
                        <TableColumn fx:id="loanBookTitleClm" prefWidth="200.0" text="Titolo Libro" />
                        <TableColumn fx:id="loanBookCodeClm" prefWidth="120.0" style="-fx-alignment: CENTER;" text="ISBN" />
                        <TableColumn fx:id="loanDateClm" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Scadenza" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
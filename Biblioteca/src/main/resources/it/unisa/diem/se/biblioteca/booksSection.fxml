<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.se.biblioteca.controller.BookSectionController">
   <children>
      <SplitPane dividerPositions="0.3" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <items>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Gestione libri" />
                  <TextField fx:id="titleLabel" promptText="Titolo..." />
                  <TextField fx:id="authorLabel" promptText="Autori (es: Mario Rossi, Luca Bianchi)..." />
                  <TextField fx:id="codeLabel" promptText="Codice ISBN..." />
                  <TextField fx:id="yearLabel" promptText="Anno pubblicazione..." />
                  <TextField fx:id="copiesLabel" promptText="Numero copie..." />
                  
                  <Button fx:id="addBookButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#addBook" text="Aggiungi libro" />
                  
                  <Button fx:id="removeButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#removeBook" text="Rimuovi libro">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  
                  <Button fx:id="goBackButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#goBack" text="Torna indietro">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox>
               <children>
                  <TextField fx:id="bookSearchLabel" onAction="#bookSearch" promptText="Cerca per titolo, cognome autore o codice ISBN...">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  
                  <TableView fx:id="bookTable" editable="true" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="titleClm" onEditCommit="#updateTitle" text="Titolo" />
                        <TableColumn fx:id="authorsClm" onEditCommit="#updateAuthors" text="Autori" />
                        <TableColumn fx:id="codeClm" onEditCommit="#updateBookCode" text="ISBN" />
                        <TableColumn fx:id="yearClm" onEditCommit="#updateYear" text="Anno" />
                        <TableColumn fx:id="copiesClm" onEditCommit="#updateCopies" text="Copie" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</AnchorPane>

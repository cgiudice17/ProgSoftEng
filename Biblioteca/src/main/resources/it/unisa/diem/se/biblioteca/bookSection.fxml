<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="689.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.se.biblioteca.BookSectionController">
   <children>
      <SplitPane dividerPositions="0.3" prefHeight="480.0" prefWidth="689.0">
         <items>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label text="Gestione libri" />
                  <TextField fx:id="TitleLabel" promptText="TItolo..." />
                  <TextField fx:id="AuthorLabel" promptText="Autori..." />
                  <TextField fx:id="CodeLabel" promptText="Codice ISBN..." />
                  <TextField fx:id="YearLabel" promptText="Anno pubblicazione..." />
                  <TextField fx:id="CopiesLabel" promptText="Numero copie..." />
                  <Button fx:id="AddBookButton" mnemonicParsing="false" onAction="#AddBook" text="Aggiungi libro" />
                  <Button fx:id="RemoveButton" mnemonicParsing="false" onAction="#RemoveBook" text="Rimuovi libro">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="GoBackButton" mnemonicParsing="false" onAction="#GoBack" text="Torna indietro">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextField fx:id="BookSearchLabel" onAction="#BookSearch" promptText="Cerca per titolo, cognome autore o codic ISBN...">
                     <VBox.margin>
                        <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TableView fx:id="BookTable" prefHeight="478.0" prefWidth="302.0">
                     <columns>
                        <TableColumn fx:id="TitleClm" onEditCommit="#updateTitle" prefWidth="69.59990234375073" text="Titolo" />
                        <TableColumn fx:id="AuthorsClm" onEditCommit="#updateAuthors" prefWidth="83.20001220703125" text="Autori" />
                        <TableColumn fx:id="CodeClm" onEditCommit="#updateBookCode" prefWidth="100.00004577636719" text="Codice ISBN" />
                        <TableColumn fx:id="YearClm" onEditCommit="#updateYear" prefWidth="131.199951171875" text="Anno pubblicazione" />
                        <TableColumn fx:id="CopiesClm" onEditCommit="#updateCopies" prefWidth="96.0" text="Numero copie" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</AnchorPane>

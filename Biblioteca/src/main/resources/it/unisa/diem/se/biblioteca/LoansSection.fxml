                  <DatePicker fx:id="DatePicker" onAction="#SelectDate" promptText="Data di restituzione..." />
                  <Button fx:id="LoanButton" mnemonicParsing="false" onAction="#LoanBook" text="Regista prestito" />
                  <Button fx:id="ReturnButton" mnemonicParsing="false" onAction="#ReturnBook" text="Regista restituzione">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="GoBackButton" mnemonicParsing="false" onAction="#GoBack" text="Torna indietro">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextField promptText="Cerca per matricola studente o ISBN libro...">
                     <VBox.margin>
                        <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                     </VBox.margin></TextField>
                  <TableView fx:id="BookTable" prefHeight="478.0" prefWidth="302.0">
                     <columns>
                        <TableColumn fx:id="LoanNameClm" prefWidth="69.59990234375073" text="Nome" />

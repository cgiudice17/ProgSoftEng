<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="689.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.se.biblioteca.LoansSectionController">
   <children>
      <SplitPane dividerPositions="0.3" prefHeight="480.0" prefWidth="689.0">
         <items>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label text="Gestione prestiti e restituzioni " />
                  <TextField fx:id="LoanStudentLabel" onAction="#selectStudent" promptText="Matricola o cognome studente..." />

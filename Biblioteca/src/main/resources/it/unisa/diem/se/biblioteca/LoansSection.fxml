                        <TableColumn fx:id="LoanCodeClm" prefWidth="84.00006103515625" text="Matricola" />
                        <TableColumn fx:id="LoanBookTitleClm" prefWidth="89.59991455078125" text="Titolo libro" />
                        <TableColumn fx:id="LoanBookCodeClm" prefWidth="88.0" text="ISBN libro" />
                        <TableColumn fx:id="LoanDateClm" prefWidth="94.40008544921875" text="Data scadenza" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</AnchorPane>
